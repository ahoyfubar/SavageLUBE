{
  "manifest_version": 2,
  "name": "Savage Love Usability Browser Enhancement",
  "version": "2.0",
  "short_name": "SavageLUBE",
  "description": "SavageLUBE allows you to reconfigure the comments section on Savage Love. Copyright Â© 2021 fubar. All rights reserved.",
  "browser_action": {
    "default_icon": "slogicon.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.thestranger.com/*"],
      "js": ["content.js"],
      "css": ["savagelube.css"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "permissions": ["tabs"]
}
