{
  "manifest_version": 2,
  "name": "SlogBlocker Extension",
  "version": "1.3",
  "short_name": "SlogBlocker",
  "description": "SlogBlocker allows you to reconfigure the comments section on Savage Love. Copyright Â© 2020 fubar. All rights reserved.",
  "browser_action": {
    "default_icon": "slogicon.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.thestranger.com/*"],
      "js": ["content.js"],
      "css": ["slogblocker.css"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "permissions": ["tabs"]
}
